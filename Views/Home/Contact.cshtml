@{
    ViewData["Title"] = "İletişim";
}

<div class="container my-5">
    <h2 class="mb-4">Bizimle İletişime Geçin</h2>

    <form>
        <div class="mb-3">
            <label class="form-label">Ad Soyad</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Mesaj</label>
            <textarea class="form-control" rows="4"></textarea>
        </div>
        <button class="btn btn-primary">Gönder</button>
    </form>

    <div class="mt-5">
        <h5 class="mb-3">Sosyal Medyada Bizi Takip Edin</h5>
        <div class="d-flex gap-4 align-items-center">
            <a href="https://facebook.com" class="social-link" target="_blank" title="Facebook"><i class="fab fa-facebook-f"></i></a>
            <a href="https://instagram.com" class="social-link" target="_blank" title="Instagram"><i class="fab fa-instagram"></i></a>
            <a href="https://twitter.com" class="social-link" target="_blank" title="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="https://github.com" class="social-link" target="_blank" title="GitHub"><i class="fab fa-github"></i></a>
        </div>
    </div>
</div>
